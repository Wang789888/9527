/* pages/about/about.wxss */
page {
  background: #f7f3f3;
}
.banner {
  display: block;
  width: 96%;
  height: 350rpx;
  padding: 2%;
  padding-top: 0px;
  border-radius: 10px;
}

.block-title {
  position: relative;
  font-size: 20px;
  line-height: 1.5;
  text-indent: 30px;
}

.block-title::after {
  position: absolute;
  left: 10px;
  top: 4px;
  content: "";
  width: 5px;
  height: 25px;
  background: #18191a;
}

.block-desc {
  padding: 5px;
  width: 95%;
  height: 100px;
  font-size: 17px;
  margin: 0.5% ;
  border: 3px dashed rgb(117, 113, 113);
  text-indent:2em;
  color: #999;
}

.main {
  margin-bottom: 30px;
  font-family: "Helvetica Neue",
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 "\9ED1\4F53",
                 Arial,
                 sans-serif;
  font-size: 30rpx;
  color: #888;
}

.map {
  width: 100%;
  height: 300px;
  border-bottom: 2px solid #eee;
} 

.mcname {
  height: 100rpx;
  font-size: 39rpx;
  font-weight: bold;
  line-height: 100rpx;
  text-align: center;
  margin-top: 30rpx;
  color: #888;
}

.mcinfo {
  font-size: 30rpx;
  min-height: 100rpx;
  line-height: 100rpx;
  border: 1px solid #eee;
  border-radius: 3px;
  width: 94%;
  word-break: break-all;
  margin: auto;
  color: #999;
  background: #fff;
}

.mctlt {
  width: 28%;
  text-align: right;
  font-size: 30rpx;
  float: left;
}

.mcval {
  width: 70%;
  vertical-align: middle;
  padding-left: 5px;
  font-size: 30rpx;
  float: left;
}

.banner image {
  width: 100%;
  height: 400rpx;
}
.goods-box .goods-operation {
  position: relative;
  width: 92%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 50rpx;
  margin: 0 auto 60rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #18191a;
  color:#fff;
  font-size: 28rpx;
}